mixin code-preview(comp)

    tabset(type='pills')
        tab(heading='Markup')
            pre.code.language-html
                code.language-html(ngNonBindable)!= comp.html
        tab(heading='Typescript')
            pre.code.language-typescript
                code.language-typescript(ngNonBindable)!= comp.ts
        tab(heading='API')
            pre.code.language-markdown
                code.language-markdown.api(ngNonBindable)
                    div!= comp.api

section#content
    .container
        .block-header
            h2 Layout Components

        each comp in components
            .card
                .card-header
                    p.lead #{comp.title}
                .card-body.card-padding
                    .readme!= comp.readme
                    .demo
                         #{'demo-' + comp.key}
                    +code-preview(comp)
