.input-group.form-group([class.fc-alt]="alt")
    span.input-group-addon
        i.zmdi.zmdi-calendar
    .dtp-container.fg-line([class.disabled]="disabled", [class.fg-toggled]="toggled")
        input.form-control.date-time-picker(
            #i,
            [type]="inputType",
            placeholder="{{placeholder}}",
            [formControl]="control",
            [attr.disabled]="disabled",
            (focus)="onFocus(i, $event); showDatetimePicker($event)",
            (blur)="onBlur(i, $event)",
            (click)="showDatetimePicker($event)",
            (change)="valueChanged()")

                